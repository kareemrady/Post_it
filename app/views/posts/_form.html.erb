<%= render "/shared/errors" , obj: @post%>
<%= form_for @post do |p| %>

	<%= p.label :title %>
	<%= p.text_field :title %>
	<br/>
	<%= p.label :url %>
	<%= p.text_field :url %>
	<br/ >
	<%= p.label :description %>
	<%= p.text_field :description %>
	<br/ >
	
	
	<%= p.submit @post.new_record? ? "Create Post" : "Update Post", class: "btn btn-primary"%>
	
	<% end %>
	