<h3><%= @post.title%></h3>
<ul class="well">
	<strong>Title:</strong> <br/ ><%= @post.title%>
	<br/ ><hr>
	<strong>URL:</strong> <br/ ><%= @post.url%>
	<br/ ><hr>
	<strong>DESCRIPTION:</strong> <br/ ><%= @post.description%>
</ul>
<h4>Comments: </h4>
<ul class="well">

		<% @post.comments.each do|comment| %>
		<li><%= comment.body %></li>
		<% end %>
		<br/ >
		<% if logged_in? %>
		<%= link_to "Add Comment", new_post_comment_path(@post) %>
		<% end %>
		
	</ul>
	<% if logged_in? && current_user == @post.creator%>
<%= link_to 'Edit', edit_post_path(@post)%>
<br />
<% end %>
<%= link_to 'Back', posts_path %>
