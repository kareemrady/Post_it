<h3><%= @post.title%></h3>
<ul class="well " >
	<strong>Title:</strong> <br/ ><%= @post.title%>
	<br/ ><hr>
	<strong>URL:</strong> <br/ ><%= @post.url%>
	<br/ ><hr>
	<strong>DESCRIPTION:</strong> <br/ ><%= @post.description%>
</ul>

Comments:
<br/ >
<br/ >
<div class="row">

	
	<% @comment.all.each do |comment|%>
	<% if logged_in? %>
	
	<div id="voting" class="well span1">
		
		<%= link_to vote_post_comment_path(@post, @comment, vote: true), method: 'post', remote: true  do%>
		<i class="icon-level-up icon-2x"></i>
		<% end %>
		<br/ >
		
		<span id="vote_<%= comment.id %>_votes">
		<%= "#{comment.total_votes} votes" %>
		</span>

		<%= link_to vote_post_comment_path(@post, @comment, vote: false), method: 'post', remote: true do%>
		<i class="icon-level-down icon-2x"></i>
		
	
		<% end %>
	</div>

	

	<ul class="well span10">
			
				
		<%= comment.body %>
		<br/ >
		
		<small><strong>Created by: </strong><em><%= comment.creator.username %></em></small>
	
	
	</ul>

	<% end %>
	
	
	
	<% end %>
	</div>
		
				
		
		<div class="row">
			<div class= "span6">
		<% if logged_in? %>
		
		<%= link_to "Add Comment", new_post_comment_path(@post), class: "btn btn-primary" %>
		<br/ >
		<% end %>
		</div>
	</div>
	<div class="row">
		<div class="span12">
			<br/ >
		</div>
			</div>	



	<div class="row">
		<div class="span3">
	<% if logged_in? && current_user == @post.creator%>
<%= link_to 'Edit', edit_post_path(@post)%>
<br />

<%= link_to 'Back', posts_path %>

</div>
</div>

<% end %>
</div>

