<h3><%= @post.title%></h3>
<ul class="well">
	<li><%= @post.title%></li>
	<li><%= @post.url%></li>
	<li><%= @post.description%></li>
</ul>
<h4>Comments: </h4>
<ul class="well">
		<% @post.comments.each do|comment| %>
		<li><%= comment.body %></li>
		<% end %>
		<br/ >
		<%= link_to "Add Comment", new_post_comment_path(@post) %>
		
	</ul>
<%= link_to 'Edit', edit_post_path(@post)%>
<br />
<%= link_to 'Back', posts_path %>
